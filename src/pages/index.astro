---
import { getCollection } from 'astro:content';

// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import CallToAction from '../components/CallToAction.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';

// Page section components
import ContactCTA from '../components/ContactCTA.astro';
import Skills from '../components/Skills.astro';

// Content Fetching: List four most recent work projects
const projects = (await getCollection('work'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<BaseLayout>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="hero">
				<Hero
					title="Hello, je suis Mehdi Kedadouche"
					tagline="Développeur Backend"
					align="start"
				>
					<div class="roles">
						<Pill><Icon icon="code" size="1.33em" /> Developer</Pill>
						<Pill><Icon icon="github-logo" size="1.33em" />Git Master</Pill>
						<Pill><Icon icon="fiber" size="1.33em" />Fiber optic technician</Pill>					</div>
				</Hero>

				<img
					class="photo"				
					alt="Mehdi smiling "
					width="360"
					height="620"
					src="/assets/maphoto.jpg"
				/>
			</header>

			<Skills />
		</div>

		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Mes derniers projets</h3>
					<p>Découvrez mes derniers projets, réalisés pour des clients ou pour moi-même.</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta">
					<CallToAction href="/work/">
						Tout les projets
						<Icon icon="arrow-right" size="1.2em" />
					</CallToAction>
				</div>
			</section>

			<section id="education" class="section with-background bg-variant">
				<header class="section-header stack gap-2 lg:gap-4 mb-3">
					<h3>Education</h3>
					<p class="mb-1">
						Vous trouverez ci-dessous l'ensemble de mes formations.
					</p><br>
					<div class='caroussel_diapo'>

						<input checked id="carou_un" name="rotation" type="radio">
						<label for="carou_un"></label>
						<input id="carou_deux" name="rotation" type="radio">
						<label for="carou_deux"></label>
					
			
						
						<div class="contenu_carou">
						
						<div class="caroussel">
			
						<img src="/assets/attestation.png" >
						<img src="/assets/udemy.png">
						
						</div>
						
						</div>
						
						</div>
						
				</header>

		
			</section>
		</main>
	
		<ContactCTA />
	</div>
</BaseLayout>

<style>



.photo {
  animation: scale 2s both;
}

@keyframes scale {
  50% {
    transform: scale(0.8);
  }
  100% {
    transform: scale(1);
  }
}

#education {

    /* background-color: #c3c3c33d; */
    height: 45em;
    border-radius: 5%;
    padding: 10px;
}

.mention-card {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20px;
}

.mention-card img {
  width: 100%;
  cursor: pointer;
  transition: transform 0.2s;
}

.mention-card img:hover {
  transform: scale(1.2); /* Ajustez la valeur de l'échelle selon vos préférences */
}

.mention-card img.zoomed {
  transform: scale(2.5); /* Ajustez la valeur de l'échelle pour un zoom plus important */
  transform-origin: center; /* Ajuste l'origine de la transformation au centre de l'image */

  top: 50%; /* Centre vertical */
  left: 100%; /* Centre horizontal */
  max-width: 100%; /* Pour s'assurer que l'image ne dépasse pas l'écran */
  transition: transform 0.2s;
}


	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		text-shadow: 5px 5px 4px #a1229d4d;
	}
	.site-title{ font-size: 20px;
	}
	.roles {
		display: none;
	}

	.hero img {
		
		object-fit: cover;
		object-position: top;
		border-radius: 19.5rem;
		box-shadow: var(--shadow-md);
	}

	@media (min-width: 50em) {
		.hero {
			display: grid;
			grid-template-columns: 6fr 4fr;
			padding-inline: 2.5rem;
			gap: 3.75rem;
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			gap: 0.5rem;
		}

		.hero img {
			
			border-radius: 13.5rem;
			object-fit: cover;
		}
	}

	/* ====================================================== */

	.section {
		display: grid;
		gap: 2rem;
	}

	.with-background {
		position: relative;
	}

	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);

		content: '';
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background:
			url('/assets/backgrounds/noise.png') top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
			var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
		

	}

	.section-header h3 {
		font-size: var(--text-2xl);
		text-shadow: 5px 5px 4px #ffffff4d;
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
			gap: 5rem;
		}

		.section.with-cta {
			grid-template-areas: 'header header header cta' 'gallery gallery gallery gallery';
		}

		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3 {
			font-size: var(--text-4xl);
		}

		.with-cta .section-header {
			justify-self: flex-start;
			text-align: left;
		}

		.gallery {
			grid-area: gallery;
		}

		.cta {
			grid-area: cta;
		}
	}

	/* ====================================================== */

	.mention-card {
		display: flex;
		height: 7rem;
		justify-content: center;
		align-items: center;
		text-align: center;
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		color: var(--gray-300);
		background: var(--gradient-subtle);
		box-shadow: var(--shadow-sm);
	}

	@media (min-width: 50em) {
		.mention-card {
			border-radius: 1.5rem;
			height: 19.5rem;
		}
	}


	

*{box-sizing: border-box}


img{max-width:100%}

.caroussel_diapo input{
	
position:absolute;
left:-9999px
	
	}
    
.caroussel_diapo{	

text-align:center;
margin:1rem auto;
width: 15em;
filter: drop-shadow(0 0 0.75rem white);

}
	
.caroussel {

max-width: 500px;
aspect-ratio:3/2;
position: relative;
margin:auto;
	
	}
@supports not(aspect-ratio:3/2){
	
	.caroussel{padding-top: 66.60%}	
	
	}
	
	
	
.caroussel img {
	
position: absolute;
top: 0;
left: 0;
opacity: 0;
outline: 1px solid transparent;
backface-visibility: hidden;
transition: 1s opacity;
width: 500px;
}

	


.caroussel_diapo input + label {
	
cursor: pointer;
background-color:#bababa;
display: inline-block;
width: 20px;
aspect-ratio:1;
border-radius: 50%;

	
	}

	@supports not(aspect-ratio:1){
	.caroussel_diapo input + label{height:20px}	
	}
	
.caroussel_diapo input:checked + label{
	background-color: #6753ea;
	
		
	}

/*droite*/
