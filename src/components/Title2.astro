---
interface Props {
	title2: string;
	tagline?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, title2 } = Astro.props;
---

<div class:list={['title2 stack gap-4', align]}>
	<div class="stack gap-2">
		
		<h1 class="title">{title2}</h1>

		{tagline && <p class="tagline">{tagline}</p>}
	</div>
	<slot />
</div>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title,
	.tagline {
		text-shadow: 5px 5px 4px #c389c1fa;
		margin-inline: auto;
		text-align: center;

	}
    
    .tagline {
		font-size: x-large;
	}


	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
			
		}
	}


	

.title:first-of-type {    
  animation: showup 10s forwards ;
}


@keyframes showup {
    0% {opacity:0;}
    20% {opacity:1;}
    80% {opacity:1;}
    100% {opacity:1;}
}




</style>